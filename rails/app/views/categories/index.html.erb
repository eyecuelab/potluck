<h2>Admin</h2>
<div class="row">
	<div class="col-md-6 col-sm-6">
		<h3>Categories</h3>
		<% Category.top_level.each do |category| %>
			<li>
			<%= category.name %>
			<%= link_to "Edit", edit_category_path(category) %> |
		  <%= link_to "Delete", category_path(category), :method => "delete" %>
			</li>
				 <% category.children.each do |categorychild| %>
				 <ul>
					<li><%= categorychild.name %></li>
				</ul>
					<% categorychild.children.each do |categorychild| %>
						<ul style="margin-left: 25px;">
							<li><%= categorychild.name %></li>
						</ul>
							<% categorychild.children.each do |categorychild| %>
								<ul style="margin-left: 50px;">
									<li><%= categorychild.name %></li>
								</ul>
							<% end %>
					<% end %>
			<% end %>
		<% end %>
	</div>


	<div class="col-md-6 col-sm-6">
		<h3>Locations</h3>
		<% Location.top_level.each do |location| %>
			<li>
			<%= location.name %>
			<%= link_to "Edit" %> |
		  <%= link_to "Delete", :method => "delete" %>
			</li>
				 <% location.children.each do |locationchild| %>
				 <ul>
					<li><%= locationchild.name %></li>
				</ul>
					<% locationchild.children.each do |locationchild| %>
						<ul style="margin-left: 25px;">
							<li><%= locationchild.name %></li>
						</ul>
							<% locationchild.children.each do |locationchild| %>
								<ul style="margin-left: 50px;">
									<li><%= locationchild.name %></li>
								</ul>
							<% end %>
					<% end %>
			<% end %>
		<% end %>
	</div>

</div>